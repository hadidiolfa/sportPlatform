{% extends 'base.html.twig' %}

{% block body %}
    <h1>Responsable list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Adresse</th>
                <th>Ville</th>
                <th>Phone</th>
                <th>Cin</th>
                <th>Poste</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for responsable in responsables %}
            <tr>
                <td><a href="{{ path('responsable_show', { 'id': responsable.id }) }}">{{ responsable.id }}</a></td>
                <td>{{ responsable.nom }}</td>
                <td>{{ responsable.prenom }}</td>
                <td>{{ responsable.email }}</td>
                <td>{{ responsable.adresse }}</td>
                <td>{{ responsable.ville }}</td>
                <td>{{ responsable.phone }}</td>
                <td>{{ responsable.cin }}</td>
                <td>{{ responsable.poste }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('responsable_show', { 'id': responsable.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('responsable_edit', { 'id': responsable.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('responsable_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
